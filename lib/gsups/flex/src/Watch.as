package  {		import flash.utils.getTimer;		public class Watch {				private var tag:String;		private var time_zero:uint;		public var time:int;		public function Watch( tag:String, f:Function ) {			this.tag = tag;			time_zero = getTimer();			if(f){				f()				time = lap()			}		}				public function lap():int{            var lap_time:uint 	= getTimer();			var span:int 		= lap_time - time_zero;            var msg:String 		= "AS_WATCH "+this.tag+": " + span;						//trace(msg);			//if(console)				console(msg);						return span;		}				/* *** */				private static var console:Function = trace;				public static function setConsole(cf:Function){			console = cf;		}					}		}