%html
  %head
    %title
      = "Moderation Request for #{@group.class.to_s} #{@group.name}"
    %style
      /
        p {
        font-family: Arial, Helvetica, sans-serif;
        font-size: 12px;
        color: #000;
        }
        a:link, a:visited, a:active {
        color: #03C;
        }
        div.container {
        padding: 10px;
        font-family: Arial, Helvetica, sans-serif;
        font-size: 12px;
        background-color: #FFF;
        }
  %body
    .container
      %p
        Request to enable
        %a{ :href=>"#{APP_URL}/#{@user.id}/edit" }
          = @user.full_name
        for
        %a{ :href=>"#{APP_URL}/#{@group.class.to_s.downcase.pluralize() }/#{@group.id}" }
          = "#{@group.class.to_s} #{@group.name}"

      %p
        Thank you,
        %br
        \- The Global Sports Team

