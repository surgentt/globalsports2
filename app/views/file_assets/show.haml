
.profileContentArea.listingPage
  .profilePageHeader
    %h2.columnDescriptor
      %span
        FileAsset

  .listings

    %p
      %b
        Name:
      = h @file_asset.name
    %p
      %b
        Location:
      = h @file_asset.location
    %p
      %b
        Status:
      = h @file_asset.status
    %p
      %b
        Last Block:
      = h @file_asset.last_block
    %p
      %b
        Total blocks:
      = h @file_asset.block_count
    %p
      %b
        Md5:
      = h @file_asset.md5
    = link_to 'Edit', edit_file_asset_path(@file_asset)
    |
    = link_to 'Back', file_assets_path
